{{> header}}
    <div class="container main-content">
        <div class="row">
            {{#with artworkstuff}}
                <div class="col-12 col-lg-6 lot-description">
                    <h2 class="item-title">{{title}}</h2><p class="lot-number" lot-number="{{lot_number}}">Lot {{lot_number}}</p>
                    <img src="{{images.[0]}}" class="item-img">
                    <p><span class="bold-header">By:</span> {{artist}}, {{year}}</p>
                    <p><span class="bold-header">FAIR MARKET VALUE:</span> ${{fmv}}</p>
                    <p><span class="bold-header">Dimensions:</span> {{dimensions}}</p>
                    <p><span class="bold-header">Materials:</span> {{materials}}</p>
                    <p><span class="bold-header">Edition:</span> {{edition}}</p>
                    <p><span class="bold-header">Details:</span> {{{detail_desc}}}</p>
                    <hr>
                    <p>To place a bid, please submit your bid amount below.</p>
                    <form action="/payment" method="GET" style="display: flex; align-items: baseline;">
                        <label for="bid-amount"><b>Bid Amount: $</b></label><input type="number" name="bidAmount" id="bid-amount" min="{{add this.max this.bid_increments}}" step="{{this.bid_increments}}" value="" placeholder="{{add this.max this.bid_increments}}">&nbsp;<button class="btn" type="submit">Submit Bid</button>
                        <input type="hidden" name="artworkId" value="{{id}}">
                    </form>
                </div>
            {{/with}}
        </div>
    </div>

{{> footer}}
<script src="./socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/socketIOBid.js"></script>
